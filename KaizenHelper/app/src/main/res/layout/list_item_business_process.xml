<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/list_item_business_process_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:padding="@dimen/default_side_padding"
    >


    <TextView
        android:id="@+id/list_process_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:text="Packing"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/list_left_padding"
        style="@style/ListText"/>
    <TextView
        android:id="@+id/list_process_rating"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="7"
        android:gravity="center"
        style="@style/ListText"/>
    <ImageButton
        android:id="@+id/delete_list_item_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_remove_circle_outline"
        android:clickable="true"
        android:background="@null"/>

</LinearLayout>